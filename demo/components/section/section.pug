                        //-     data: { type: 1 },
                        //-     type:"button",
                        //-     content:"&#x271A;",
                        //-     isControl: isControl,
                        //-     isAdd: true,
                        //-     title: "Add"
                        //- })
                    +input({...item, isFirst})
                            