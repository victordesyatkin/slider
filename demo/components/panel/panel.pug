include ../link/link
include ../section/section

mixin panel(props = {})
    -
        let { sections = [], link } = props;
        let className = 'panel';
        let classNames = `${className}`;
    div(
        class=classNames
    )
        .panel__head
            +link(link)
        .panel__sections
            each section in sections
                +section(section)

